<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context="com.example.adamnoor.basement.LogIn">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In, please"
        android:layout_gravity="center"
        android:layout_marginTop="38dp"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/etUsernameLogIn"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/et_design"
        android:hint="Username"
        android:padding="5dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/etPasswordLogIn"
        android:layout_gravity="center"
        android:hint="Password"
        android:background="@drawable/et_design"
        android:padding="5dp"
        android:layout_below="@+id/etUsernameLogIn"
        android:layout_alignStart="@+id/etUsernameLogIn"
        android:layout_marginTop="24dp" />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogIn"
        android:layout_marginTop="21dp"
        android:text="LET'S START"
        android:background="#4CAF50"
        android:textColor="#ffffff"
        android:layout_below="@+id/etPasswordLogIn"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need an account"
        android:layout_below="@+id/btnLogIn"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />
    <Button
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignUpLIscreen"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginBottom="11dp" />
</RelativeLayout>
